{% extends 'navbar.html.twig' %}

{% block body %}
    <div class="col-12">
        <div class="col-12">
            <h1>Gérer les utilisateurs</h1>
            <button type="button" class="btn btn-secondary mb-4" data-toggle="modal" data-target="#modalNewUser"
            onclick="clearModal('#modalNewUser')">
                Créer un utilisateur
            </button>
        </div>

        <div class="col-12">
            <table class="table table-striped table-bordered w-100" id="dataTableUsers">
            </table>
        </div>

    </div>

    <button hidden id="buttonModalValidateNewUser" data-target="#modalValidateNewUser" data-toggle="modal"></button>
    {% include 'users/modalValidateNewUser.html.twig' %}
    {% include 'users/modalNewUser.html.twig' %}
    {% include 'users/modalDeleteUser.html.twig' %}
    {% include 'users/modalEditUser.html.twig' %}
{% endblock %}

{% block javascript %}
<script src="{{ asset('js/users.js') }}?{{ date().timestamp }}"></script>
{% endblock %}