{% extends 'navbar.html.twig' %}

{% block body %}
<div class='row justify-content-center'>
    <form action="" class="col-3" id="doForm">
        <h1>Configuration des jours de congés</h1>
        <div class="form-group">
            <label for="">Incrément de CP</label>
            <input type="text" class="form-control data" name="cp"
                value="{{parameters.cpIncrement is defined ? parameters.cpIncrement :'' }}">
        </div>
        <div class="form-group">
            <label for="">Incrément de RTT</label>
            <input type="text" class="form-control data" name="rtt"
                value="{{parameters.rttIncrement is defined ? parameters.rttIncrement : ''}}">
        </div>
        <button type="button" class="btn btn-success" onclick="ajaxDO()">Enregistrer</button>
    </form>
</div>

<button hidden id="buttonModalDoSet" data-target="#modalDOSet" data-toggle="modal"></button>
{% include 'parameters/modalDOSet.html.twig' %}

{% endblock %}
{% block javascript %}
<script src="{{ asset('js/parameters.js') }}?{{ date().timestamp }}"></script>
{% endblock %}