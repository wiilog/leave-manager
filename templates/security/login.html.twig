{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block classbody %}
    style='background-image: url({{asset('img/backgroundLogin.jpg')}})'
{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="login-wrapper mt-3">
        <div class="row">
            <div class="box-login login-form box-shadow">
                <div class="col-md-12 login-header">
                    <h4 id="textConnexion">Connexion</h4>
                </div>
                <div class="form-signin">
                    <div class="form-group">
                        <label for="inputEmail" class="sr-only">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input-login" placeholder="Email" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="sr-only">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <a href="{{ path('register') }}" class="btn btn-warning">S'inscrire</a>
                        <button id="button-login" class="btn btn-primary" type="submit">
                            Connexion
                        </button>
                    </div>
                    <div class="box-logout">
                    </div>
                </div>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">
    </div>
</form>
{% endblock %}